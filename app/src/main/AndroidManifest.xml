<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.denis.topnoticiasnovo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivityNoticia"
            android:label="Excluir" />
        <activity
            android:name=".TelaNoticia"
            android:label="Notícia" />
        <activity
            android:name=".DrawerActivityNoticia"
            android:label="Escolher a notícia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerActivityTelaNoticia"
            android:label="Notícia"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerActivitySobre"
            android:label="Sobre"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>