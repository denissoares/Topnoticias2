<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mensagem"
        android:text="@string/mensagemInicial"
        android:textStyle="bold"
        android:textColor="@color/Preta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"/>

    <Spinner
        android:id="@+id/escolherData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mensagem"
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px" />

    <Spinner
        android:id="@+id/escolherAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/escolherData"
        android:layout_below="@id/escolherData"
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px" />

    <ListView
        android:id="@+id/escolherTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/escolherAutor"
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px" />

    <!--<TextView android:id="@+id/encontradas"
        android:textColor="@color/Preta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/escolherTitulo"
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px" />-->
</RelativeLayout>